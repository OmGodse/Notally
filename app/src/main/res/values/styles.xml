<resources>

    <style name="Base.AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">?attr/colorSurface</item>
        <item name="colorPrimaryDark">?attr/colorSurface</item>
        <item name="android:colorEdgeEffect">?attr/colorSecondary</item>

        <item name="windowActionModeOverlay">true</item>

        <item name="textAppearanceButton">@style/TextAppearance.Button</item>
        <!-- Menu Items, EditTexts, Dialog Titles -->
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Subtitle1</item>

        <!-- Required for the Settings page to look good -->
        <item name="android:textAppearanceListItem">?attr/textAppearanceBody1</item>
        <item name="android:textAppearanceListItemSecondary">?attr/textAppearanceBody2</item>

        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="chipGroupStyle">@style/ChipGroup</item>

        <item name="alertDialogTheme">@style/AlertDialog</item>
        <item name="materialAlertDialogTheme">@style/AlertDialog</item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme">
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorSecondary">@color/LightBlue500</item>
    </style>

    <style name="MainActivity" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="TextAppearance.Pinned" parent="TextAppearance.Button">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:letterSpacing">0.04</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Preview" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="fontFamily">@font/nunito_sans</item>
    </style>


    <style name="TextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextAppearance.Toolbar" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextAppearance.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:letterSpacing">0.02</item>
    </style>


    <style name="Preview" parent="Widget.MaterialComponents.TextView">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Toolbar</item>
    </style>

    <style name="ChipGroup" parent="Widget.MaterialComponents.ChipGroup">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="chipSpacingVertical">8dp</item>
    </style>


    <style name="EditText.Title" parent="Widget.AppCompat.EditText">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:hint">@string/title</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:background">@null</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
    </style>

    <style name="Pinned" parent="Widget.MaterialComponents.TextView">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:text">@string/pinned</item>
        <item name="android:textAppearance">@style/TextAppearance.Pinned</item>
    </style>

    <style name="DateCreated" parent="Widget.MaterialComponents.TextView">
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:text">@string/date</item>
        <item name="android:textColor">?android:textColorHint</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    </style>


    <style name="AlertDialog.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>


    <style name="AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">?attr/colorSecondary</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialog.Title</item>
    </style>


    <style name="PrimarySecondarySwap" parent="ThemeOverlay.MaterialComponents">
        <item name="colorPrimary">?attr/colorSecondary</item>
    </style>
</resources>