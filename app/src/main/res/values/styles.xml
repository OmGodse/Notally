<resources>

    <style name="Base.AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">?attr/colorSurface</item>
        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="android:colorEdgeEffect">?attr/colorSecondary</item>

        <item name="windowActionModeOverlay">true</item>

        <!-- Required for the Settings page to look good -->
        <item name="android:textAppearanceListItem">?attr/textAppearanceBody1</item>
        <item name="android:textAppearanceListItemSecondary">?attr/textAppearanceBody2</item>

        <item name="alertDialogTheme">@style/AlertDialog</item>
        <item name="materialAlertDialogTheme">@style/AlertDialog</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme">
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorSecondary">@color/LightBlue500</item>
    </style>

    <style name="MainActivity" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="TextAppearance.Pinned" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Preview" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="fontFamily">@font/nunito_sans</item>
    </style>

    <style name="TextAppearance.Toolbar" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:letterSpacing">0.04</item>
        <item name="fontFamily">@font/nunito_sans_bold</item>
    </style>


    <style name="Preview" parent="Widget.MaterialComponents.TextView">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.Preview</item>
    </style>


    <style name="EditText.Title">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:hint">@string/title</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="drawableTint">?attr/colorSecondary</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:importantForAutofill">no</item>
    </style>

    <style name="Pinned" parent="Widget.MaterialComponents.TextView">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:text">@string/pinned</item>
        <item name="android:textAppearance">@style/TextAppearance.Pinned</item>
    </style>

    <style name="DateCreated" parent="Widget.MaterialComponents.TextView">
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:text">@string/date</item>
        <item name="android:textColor">?android:textColorHint</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    </style>


    <style name="Option" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">24dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="drawableTint">?attr/colorOnSurface</item>
    </style>

    <style name="AddLabel" parent="Widget.MaterialComponents.TextView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:text">@string/create_new</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>


    <style name="AlertDialog.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:letterSpacing">0.03</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AlertDialog.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:theme">@style/PrimarySecondarySwap</item>
    </style>


    <style name="AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialog.Title</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialog.Button</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialog.Button</item>
    </style>

    <style name="BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
    </style>


    <style name="PrimarySecondarySwap" parent="ThemeOverlay.MaterialComponents">
        <item name="colorPrimary">?attr/colorSecondary</item>
    </style>
</resources>