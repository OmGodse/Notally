<resources>

    <style name="Base.AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/Transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:colorEdgeEffect">@color/secondary_translucent</item>

        <item name="snackbarStyle">@style/Notally.Snackbar</item>

        <item name="alertDialogTheme">@style/Notally.AlertDialog</item>
        <item name="materialAlertDialogTheme">@style/Notally.AlertDialog</item>
        <item name="bottomSheetDialogTheme">@style/Notally.BottomSheetDialog</item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme">
        <item name="colorPrimary">@color/White</item>
        <item name="colorPrimaryDark">@color/White</item>
        <item name="colorSecondary">@color/LightBlue500</item>

        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="MaterialDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Title.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:hint">@string/title</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="Options.Button" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:drawablePadding">24dp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:drawableTint">?attr/colorOnSurface</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="TextAppearance.Error" parent="TextAppearance.Design.Error">
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Toolbar" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="TextAppearance.ChipLikeButton" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/nunito_regular</item>
    </style>


    <style name="AlertDialog.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AlertDialog.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="rippleColor">@color/secondary_translucent</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>


    <style name="Notally.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="animationMode">slide</item>
    </style>

    <style name="Notally.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialog.Title</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialog.Button</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialog.Button</item>
    </style>

    <style name="Notally.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="Notally.TextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorPrimary">?attr/colorSecondary</item>
    </style>
</resources>